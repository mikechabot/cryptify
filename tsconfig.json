{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts", "./src/**/*.test.js"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "lib": ["es2018"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src"
  }
}
