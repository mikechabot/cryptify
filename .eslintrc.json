{
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "rules": {
    "eqeqeq": [2, "always"],
    "indent": ["error", 2],
    "no-console": ["error", { "allow": ["log", "error"] }],
    "no-debugger": 2,
    "no-extend-native": 0,
    "no-var": 1,
    "quotes": [2, "single"],
    "semi": [2, "always"]
  }
}
