{
  "name": "cryptify",
  "version": "4.0.3",
  "description": "File-based encryption utility for Node.js",
  "bin": "./cli.js",
  "types": "./lib/CryptifyModule.d.ts",
  "scripts": {
    "start": "node index",
    "build": "babel src -d lib --extensions .ts",
    "prebuild": "rm -rf ./lib ./validated-ciphers",
    "postbuild": "tsc --outDir lib",
    "cli": "babel-node ./src/cli.js",
    "test": "jest",
    "prepublish": "crlf --set=LF index.js",
    "postpublish": "crlf --set=CRLF index.js",
    "prevalidate": "npm run build",
    "validate": "babel-node ./validateCiphers.js"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikechabot/cryptify.git"
  },
  "keywords": [
    "encryption",
    "decryption",
    "file-based encryption",
    "crypto",
    "Node.js encryption",
    "javascript",
    "node.js",
    "node"
  ],
  "author": "Mike Chabot",
  "license": "GPL-2.0-only",
  "bugs": {
    "url": "https://github.com/mikechabot/cryptify/issues"
  },
  "homepage": "https://github.com/mikechabot/cryptify#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.12.7",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "babel-jest": "^26.6.3",
    "crlf": "1.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.6",
    "jest": "^25.3.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "commander": "^5.0.0",
    "ts-jest": "^26.4.4"
  }
}
